<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/llTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/llVisionRight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:visibility="gone"
                android:id="@+id/tvVisionRightTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:text="裸眼右"
                />
            <TextView
                android:id="@+id/tvVisionRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="@color/color_26"
                android:text="-"/>
        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/llVisionLeft"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:visibility="gone"
                android:id="@+id/tvVisionLeftTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:text="裸眼左"
                />
            <TextView
                android:id="@+id/tvVisionLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="@color/color_26"
                android:text="-"/>
        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/llGlassRight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:visibility="gone"
                android:id="@+id/tvGlassRightTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:text="戴镜右"
                />
            <TextView
                android:id="@+id/tvGlassRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="@color/color_26"
                android:text="-"/>
        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/llGlassLeft"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:visibility="gone"
                android:id="@+id/tvGlassLeftTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:text="戴镜左"
                />
            <TextView
                android:id="@+id/tvGlassLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="@color/color_26"
                android:text="-"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/llTop"
        android:id="@+id/llContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_5fa"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:gravity="center"
            android:text="根据学生回答的结果(不管对错)选择视标方向"
            android:textColor="@color/color_99"
            android:textSize="15sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvEyeValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_ff_left_shape"
                    android:drawableRight="@drawable/icon_up"
                    android:drawablePadding="6dp"
                    android:paddingLeft="16dp"
                    android:paddingTop="6dp"
                    android:paddingRight="16dp"
                    android:paddingBottom="6dp"
                    android:text="4.7"
                    android:textColor="@color/color_26"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/tvDistance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/bg_ff_right_shape"
                    android:gravity="right"
                    android:paddingLeft="16dp"
                    android:paddingTop="6dp"
                    android:paddingRight="16dp"
                    android:paddingBottom="6dp"
                    android:text="5米"
                    android:textColor="@color/color_26"
                    android:textSize="15sp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tvTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text=""
                android:textColor="@color/color_26"
                android:textSize="15sp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="450dp">
            <ImageView
                android:id="@+id/ivOk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/ok_n"/>
            <ImageView
                android:layout_above="@+id/ivOk"
                android:id="@+id/ivUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="-18dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/up_n"/>
            <ImageView
                android:layout_toStartOf="@+id/ivOk"
                android:id="@+id/ivLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="-18dp"
                android:layout_centerVertical="true"
                android:src="@drawable/left_n"/>
            <ImageView
                android:layout_toEndOf="@+id/ivOk"
                android:id="@+id/ivRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="-18dp"
                android:layout_centerVertical="true"
                android:src="@drawable/right_n"/>

            <ImageView
                android:layout_below="@+id/ivOk"
                android:id="@+id/ivDown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-18dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/down_n"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/llContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvEyeChart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_e5"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="72dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingStart="16dp"
                android:gravity="center"
                android:text="专业验光师可以选择结果手动提交。"
                android:textColor="@color/color_99"
                android:textSize="15sp"/>
            <LinearLayout
                android:id="@+id/llCommit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingEnd="26dp"
                android:gravity="end|center_vertical">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_commit"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="3dp"
                    android:gravity="center_vertical"
                    android:text="手动提交"
                    android:textColor="@color/color_cb7"
                    android:textSize="17sp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>